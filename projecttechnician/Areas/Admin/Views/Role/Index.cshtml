@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Roles</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New User</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Name
            </th>
            
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                <td style="width: 150px">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                        @*<a asp-action="Details" asp-controller="ProductTypes" class="btn btn-success " asp-route-id="@item.Id">Details</a>*@
                        <a asp-action="Delete" asp-controller="ProductTypes" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
                </td>
            </tr>
        }
    </table>
</div>

