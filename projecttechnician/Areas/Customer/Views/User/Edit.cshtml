@model projecttechnician.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit";
}
<br />

<h2 class="text-info">Edit Users</h2>
<form asp-action="Edit" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="col-8">
            <div class="form-group">
                <div class="col-4">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-4">
                    <label asp-for="PasswordHash"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PasswordHash" class="form-control" />
                </div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-4">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-4">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
        </div>
    </div>
</form>



