@{
    ViewData["Title"] = "Mobile Technician";
}


<div class="container">
    <div class="row">
        <div class="col-sn-6">
            <h2>Contact</h2>
            <h6>
                Mobile Number: 07752 521550 <br />
                Store Address: 93 High Street, Maidenhead SL6 1JX <br />
                Email: iphonerepairking@hotmail.com
            </h6>
        </div>
        <div class="col-sn-6">
            <div class="contact-form">
                <form method="post">
                    <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Your Name" name="name" />
                    </div>
                    <div class="form-group">
                        <label for="name">Issue</label>
                        <input type="text" class="form-control" id="issue" placeholder="e.g Cracked Creen" name="issue" />
                    </div>
                    <div class="form-group">
                        <label for="name">Device</label>
                        <input type="text" class="form-control" id="device" placeholder="e.g iPhone 12" name="device" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="name@example.com" name="emailaddress" />
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="3" name="message"></textarea>
                    </div>
                    <div>
                        <input type="submit" value="Send Email" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>